        {
          "name": "Confirm item cleanup",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/items",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "items"
              ]
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const status = pm.response.code;",
                  "const id = pm.collectionVariables.get('itemId');",
                  "if (status === 204) {",
                  "  pm.test('no items left after delete', () => pm.expect(status).to.eql(204));",
                  "} else {",
                  "  pm.test('cleanup list returns 200', () => pm.expect(status).to.eql(200));",
                  "  const json = pm.response.json();",
                  "  const exists = Array.isArray(json.items) && json.items.some((item) => item._id === id);",
                  "  pm.test('created item removed', () => pm.expect(exists).to.be.false);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
