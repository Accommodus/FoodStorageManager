{
    "name": "MERN Secure Dev",
    "image": "mcr.microsoft.com/devcontainers/typescript-node",
    "onCreateCommand": "npm install",
    "postCreateCommand": "npm run dev",
    "remoteUser": "root",
    "containerUser": "root",
    "forwardPorts": [
        5173,
        3000
    ],
    "containerEnv": {
        //"MONGODB_URI": "${localEnv:MONGODB_URI}", // This must be set when building
        "C_PORT": "5173",
        "S_PORT": "3000"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "editor.formatOnSave": true
            },
            "extensions": [
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "openai.chatgpt",
                "mongodb.mongodb-vscode"
            ]
        }
    }
}